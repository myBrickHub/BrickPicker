<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrickPicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/payneGray</item>
        <item name="colorPrimaryVariant">@color/oxfordBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coolGray</item>
        <item name="colorSecondaryVariant">@color/coolGray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorBackgroundFloating">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackgroundFloating" tools:targetApi="23">
            ?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.BrickPicker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/textColorSecondary</item>
    </style>

    <style name="BackgroundPrimary">
        <item name="android:background">@color/delftBlue</item>
    </style>

    <style name="NavBar">
        <item name="android:background">@drawable/side_nav_bar_dark</item>
    </style>

    <style name="DetailsCard">
        <item name="android:background">?android:attr/colorBackgroundCacheHint</item>
    </style>

    <style name="Theme.BrickPicker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>